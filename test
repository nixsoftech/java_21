from pywinauto.application import Application

# Launch your application
app = Application(backend="uia").start(r"C:\path\to\RMS.exe")

# Connect to the Login window
dlg = app.window(title_re=".*Risk Management System - Login")

# Type username
dlg.child_window(auto_id="txt_UserId", control_type="Edit").type_keys("QA1")

# Type password
dlg.child_window(auto_id="txt_Password", control_type="Edit").type_keys("mypassword")

# Select Environment (example: PROD)
dlg.child_window(auto_id="cmb_Envionrnment", control_type="ComboBox").select("PROD")

# Select Login Via (example: RMS)
dlg.child_window(auto_id="cmb_loginMethod", control_type="ComboBox").select("RMS")

# Click Submit
dlg.child_window(auto_id="btn_Submit", control_type="Button").click()
