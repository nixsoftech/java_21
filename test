from pywinauto import Application
import time

# Launch app
app = Application(backend="uia").start(
    r"D:\Program Files (x86)\NCCL Ltd\RMSSetup\RMS FE.exe"
)

# Wait until login window appears
dlg = app.window(title="Risk Management System - Login")
dlg.wait("visible", timeout=20)

# Enter username & password
dlg.child_window(auto_id="txtUser", control_type="Edit").type_keys("QA1")
dlg.child_window(auto_id="txtPassword", control_type="Edit").type_keys("change@1212")

# Click login button
dlg.child_window(auto_id="btnLogin", control_type="Button").click()

print("âœ… Login completed")
time.sleep(5)
